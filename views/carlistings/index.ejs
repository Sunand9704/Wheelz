<% layout("/layouts/boilerplate") %>
<body>
  <br>
  <h2>All Cars</h2>
    <div class="row row-cols-lg-3 row-cols-md-2  row-cols-sm-1">
   <% for(let dat of data) { %>
    <a href="/cars/<%= dat._id %>" class="list-link">
        <div class="card col listing-card" style="background-color:  #F3E8FF;
;">
            <img src="<%= dat.image.url %>" class="card-img-top" alt="list_image" style="height: 20rem;">
            <div class="card-img-overlay">
                <h5 class="card-title"></h5>
              </div>
            <div class="card-body">
              <p class="card-text">
                <b><%= dat.title %></b><br>
                &#8377; <%= dat.price %>  / night
              </p>
            </div>
          </div>
    </a>
    <% } %>
</div>
    
</body>

